{
    "tasks": {
        "start": "deno run -A --watch=static/,routes/ dev.ts"
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "lint": {
        "files": {
            "include": ["routes/", "islands/", "components/"],
            "exclude": []
        },
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars"]
        }
    },
    "fmt": {
        "files": {
            "include": ["routes/", "islands/", "components/"],
            "exclude": []
        },
        "options": {
            "useTabs": true,
            "lineWidth": 140,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}